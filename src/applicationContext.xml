<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xmlns:util="http://www.springframework.org/schema/util"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd
    http://www.springframework.org/schema/util 
    http://www.springframework.org/schema/util/spring-util-3.0.xsd">
    
    <context:property-placeholder location="classpath:company.properties"/>

    <!-- Define your beans here -->
    <bean id="myLoggerConfig" class="com.gmail.kursspring.MyLoggerConfig" init-method="initLogger">
    	<property name="rootLoggerLevel" value="FINE" />
    	<property name="printedLoggerLevel" value="FINE" />
    </bean>
    
    <util:map id="tariff">
    	<entry key="DECORATOR" value="${decoratorPrice}" />
    	<entry key="ELECTRICIAN" value="${electricianPrice}" />
    </util:map>
    
    <bean id="myPrintService"
    	class="com.gmail.kursspring.PrintServiceImpl">
    </bean>
    
    <bean id="myDateService"
    	class="com.gmail.kursspring.DateServiceImpl">
    </bean>
    
    <bean id="myPriceService"
    	class="com.gmail.kursspring.PriceServiceImpl">
    	<constructor-arg ref="tariff" />
    </bean>
    
    <bean id="myDecorator"
    	class="com.gmail.kursspring.Decorator">
    	<constructor-arg type="com.gmail.kursspring.SpecialistType" value="DECORATOR"/>
    	<constructor-arg ref="myPriceService" />
    </bean>
    
    <bean id="myElectrician"
    	class="com.gmail.kursspring.Electrician">
    	<constructor-arg type="com.gmail.kursspring.SpecialistType" value="ELECTRICIAN"/>
    	<constructor-arg ref="myPriceService" />
    </bean>
    
    <util:list id="mySpecialistsList" value-type="com.gmail.kursspring.Specialist">
    	<ref bean="myDecorator" />
    	<ref bean="myElectrician" />
    </util:list>

    <bean id="myRenovationCompany"
    	class="com.gmail.kursspring.RenovationCompany">
    	<constructor-arg ref="myPrintService" />
    	<constructor-arg ref="myDateService" />
    	<constructor-arg ref="mySpecialistsList" />
    	
    	<property name="compName" value="${foo.name}" />
    	<property name="compNip" value="${foo.nip}" />
    </bean>
        

    
</beans>





